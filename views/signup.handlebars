{{> signin}}
<div class="container-md text-center mt-3">
  <div class="row my-5">
    {{!-- <div class="col my-5"style="background-color:blue"> --}}
  <div class="col-md-6 py-5" >
    <div class="card card-body">
      <h1 class="text-center mb-3">Sign Up</h1>
            <form action="/signup" method="post">
        <div class="form-group mb-3">
          <label for="fname">First Name</label>
          <input
            type="firstName"
            id="firstName"
            name="firstName"
            class="form-control"
            placeholder="Enter Name"
          />
        </div>
        <div class="form-group mb-3">
          <label for="fname">Last Name</label>
          <input
            type="lastName"
            id="lastName"
            name="lastName"
            class="form-control"
            placeholder="Enter Name"
          />
        </div>
        <div class="form-group mb-3">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group mb-3">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Create Password"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Register
        </button>
      </form>
      <p class="lead mt-4">Have An Account? <a href="/login">Login</a></p>
    </div>
    </div>
  {{!-- </div> --}}
    <div class="col">
     <img src="/images/background.webp" class="img-fluid" width="1000" height="600%"/>
    </div>
  </div>
</div>


